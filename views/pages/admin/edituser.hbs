<div class="body-cont">
    <div class="sidebar">
        <div class="row">
            <div class="image-">
                {{!-- <img class="imglog" src="media/guardlogos.png" alt=""> --}}
                <div class="imgtext">
                    <p>ecopension</p>
                </div>
            </div>
        </div>
        <div class="row" style="margin-right: 0;">
            <div class="ul-content_admin" id="admin_ul">
                <ul>
                    <p class="side_ph">Account Actions</p>
                    <li class="side_li1"><i class="fa-solid fa-house"></i><p>Home Page</p></li>
                    <li class="side_li2"><i class="fa-solid fa-user-xmark"></i><p>Add New User</p></li>
                    <li class="side_li2 active"><i class="fa-solid fa-pen-to-square"></i><p>Edit User</p></li>
                    {{!-- <li class="side_li3"><i class="fa-solid fa-spinner"></i>
                        <p>Reset Accounts</p>
                    </li> --}}
                    <p class="side_ph" style="padding-top: 20px;">Logs</p>
                    <li class="side_li4"><i class="fa-solid fa-file-export"></i><p>User Activity</p></li>
                    {{!-- <p class="side_p" style="padding-top: 20px;">Get user information</p> --}}
                    {{!-- <li class="side_li5"><i class="fa-regular fa-solid fa-chart-bar"></i>
                        <p>Wn status</p>
                    </li> --}}
                </ul>
            </div>
        </div>
    </div>
    <div class="content">
        <header class="header">
            <p class="hp">Ecopension / Admin / Edit users</p>
            <p class="hp1">Edit User</p>
        </header>
        <div class="admin_card">
            <div class="card" style="padding: 25px;">
                <div class="card-body">
                    <H4>Edit user</H4>
                    <p>Search user and edit users first name, last name, email address
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="edit_cont">
                                <div class="form-group" style="width: 40%;">
                                    <label class="label">Select user:</label>
                                    <select class="form-group select_dropdown" id="select_dropdown"
                                        aria-label="Default select example" style="margin-top: 0;">
                                        <option selected disabled>Select a user...</option>
                                    </select>
                                </div>
                                <div class="reset_text">
                                    <p id="reset_button">Reset password...</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="result_cont" id="info_row">
                                <p>Firstname: <span id="firstn"></span></p>
                                <p>Lastname: <span id="lastn"></span></p>
                                <p>Email: <span id="emailn"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="info_row">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="label">First name:</label>
                                    <input type="text" class="form-control input_field" id="firstname"
                                        placeholder="Firstname">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="label">Last name:</label>
                                    <input type="text" class="form-control input_field" id="lastname"
                                        placeholder="Last name">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="label">Email:</label>
                                    <input type="email" class="form-control input_field" id="email" placeholder="Email">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="button_cont" style="padding-right: 0;margin-top:10px;">
                                    <button id="change_user">Change</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="user_info">
                    <div class="row">
                        <div class="col-lg-12">

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

